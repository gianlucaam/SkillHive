<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    <display-name>SkillHive2.0</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Admin Support Tickets Servlet -->
    <servlet>
        <servlet-name>AdminSupportTicketsServlet</servlet-name>
        <servlet-class>com.skillhive.servlet.AdminSupportTicketsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminSupportTicketsServlet</servlet-name>
        <url-pattern>/admin/support</url-pattern>
    </servlet-mapping>
    
    <!-- Admin View Ticket Servlet -->
    <servlet>
        <servlet-name>AdminViewTicketServlet</servlet-name>
        <servlet-class>com.skillhive.servlet.AdminViewTicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminViewTicketServlet</servlet-name>
        <url-pattern>/admin/support/ticket</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Update Ticket Servlet -->
    <servlet>
        <servlet-name>AdminUpdateTicketServlet</servlet-name>
        <servlet-class>com.skillhive.servlet.AdminUpdateTicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminUpdateTicketServlet</servlet-name>
        <url-pattern>/admin/support/update-ticket</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Reply Ticket Servlet -->
    <servlet>
        <servlet-name>AdminReplyTicketServlet</servlet-name>
        <servlet-class>com.skillhive.servlet.AdminReplyTicketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminReplyTicketServlet</servlet-name>
        <url-pattern>/admin/support/reply</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Reports Servlet -->
    <servlet>
        <servlet-name>AdminReportsServlet</servlet-name>
        <servlet-class>com.skillhive.servlet.AdminReportsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminReportsServlet</servlet-name>
        <url-pattern>/admin/reports</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Export Report Servlet -->
    <servlet>
        <servlet-name>AdminExportReportServlet</servlet-name>
        <servlet-class>com.skillhive.servlet.AdminExportReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminExportReportServlet</servlet-name>
        <url-pattern>/admin/reports/export</url-pattern>
    </servlet-mapping>
</web-app>